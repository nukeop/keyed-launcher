{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "based-launcher-v3",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Based Launcher",
        "width": 600,
        "height": 400,
        "minWidth": 400,
        "minHeight": 300,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "skipTaskbar": true,
        "visible": false,
        "transparent": true,
        "shadow": true,
        "focus": true,
        "maximizable": false,
        "minimizable": false,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "High-performance multiplatform launcher",
    "longDescription": "Based Launcher v3 - A high-performance, multiplatform application launcher built with Tauri.",
    "createUpdaterArtifacts": false
  },
  "plugins": {
    "updater": {
      "active": false
    }
  }
}